@model TodoList.Models.Calcul
<a href="Utilitaires/Download">Télécharger</a>
<label>Calcul de dates</label>
<form class="form-row" asp-action="calculsdates">

    <div class="col-md-4 mb-3">
        <input class="form-control" asp-for="DateInitiale">
    </div>
    <select asp-for="Operation" class="bg-secondary mb-3 mr-sm-3">
        <option value="plus">+</option>
        <option value="moins">-</option>
    </select>

    <div class="col-md-3 mb-3">
        <div class="input-group">
            <input class="form-control" asp-for="JoursAjoutes" min="0">
            <div class="input-group-apend">
                <span class="input-group-text" id="inputGroupApend">Jours</span>
            </div>

        </div>
    </div>
    <button type="submit" class="btn btn-secondary mb-3 mr-sm-3">=</button>
    <div class="col-md-4 mb-3">
        <input class="form-control" value="@ViewBag.Resultat">
    </div>
</form>
<span asp-validation-for="JoursAjoutes" class="text-danger"></span>

